<div class="container primer-div">
        <div class="row">
        <div class="col-md-6 offset-md-3">
    <div class="text-center m-4">
        <hr>
        <h1>{{titulo}}</h1>
        <hr>
    </div>
    <div class="row">
        <form action="./contacto" method="post">
        
            <div class="input-group mb-3">
                <span class="input-group-text">Nombre:</span>
                <input type="text" class="form-control" name="nombre" placeholder="Peter Parker" required>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Email:</span>
                <input type="email" class="form-control" name="email" placeholder="nombre@ejemplo.com" required>
            </div>
            <div class="input-group mb-3">
                    <span class="input-group-text">Asunto:</span>
                    <select class="form-select" name="asunto" aria-label="Default select example" required>
                        <option value="PC">Comprar Juegos</option>
                        <option value="Xbox">Reclamos</option>
                        <option value="Playstation">Otras Consultas</option>
                    </select>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Descripci√≥n:</span>
                <textarea type="text" class="form-control" name="descripcion" placeholder="Escriba los juegos que desea comprar o cualquier otra consulta" rows="5" required></textarea>
            </div>
            <div class="mb-3 text-center">
                <input type="submit" class="btn btn-primary" value="Enviar Datos">
            </div>
        </form>
        <div class="text-center validacion">
            <h2 class="text-danger">
                {{validacion}}
            </h2>
        </div>
    </div></div></div>
</div>
